<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id='error_messages'>
      <h2><%= pluralize(@post.errors.count, 'error') %> prevented this post from being saved</h2>
      <ul>
        <% @post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>