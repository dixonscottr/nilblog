<h2>Blog posts:</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Creation</th>
    <th>Content</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to "#{post.title}", post_path(post) %></td>
      <td><%= distance_of_time_in_words(Time.now, post.created_at) %> ago</td>
      <td><%= truncate(post.content) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this beautiful post?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create a new post', new_post_path %>