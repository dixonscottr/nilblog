<div>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Created at:</strong>
   <%= format_time(@post.created_at) %>
</p>
 
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
</div>

<h2>Comments:</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
  </tr>
  <%= render @post.comments %>
</table>


<h2>Add a comment</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit this post', edit_post_path(@post) %>

<%= link_to 'Go back', posts_path %>